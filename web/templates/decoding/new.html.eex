<h1>Decode an image</h1>
<%= form_for @conn, decoding_path(@conn, :create), [as: :secret, multipart: true], fn f -> %>
  <div class="form-group">
    <label>Choose a Shrek</label>
    <%= file_input f, :image, required: "required", accept: "image/png" %>
  </div>

  <div class="form-group">
    <%= submit "Decode", class: "btn btn-primary" %>
  </div>
<% end %>
